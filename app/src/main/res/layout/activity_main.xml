<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#111111"
    android:padding="16dp">

    <!-- Top Row: Action Icons -->

    <!-- File Name Display -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnNew"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="New File"
            android:src="@drawable/ic_new_file"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnOpen"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Open File"
            android:src="@drawable/ic_open_file"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Save File"
            android:src="@drawable/ic_save_file"
            android:tint="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Untitled.txt"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- Text Editor Area -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Enter text here..."
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:background="@drawable/rounded_edit_text"
        android:padding="16dp"
        android:textSize="16sp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:overScrollMode="always" />
</LinearLayout>
