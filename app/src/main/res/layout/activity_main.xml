<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp">

    <!-- Top Row: Action Icons -->

    <!-- File Name Display -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnUndo"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="Undo"
            android:src="@drawable/ic_undo"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnRedo"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:tint="@android:color/white"
            android:contentDescription="Redo"
            android:src="@drawable/ic_redo" />

        <ImageButton
            android:id="@+id/btnFindReplace"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="Find and Replace"
            android:src="@drawable/ic_find_replace"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnNew"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="New File"
            android:src="@drawable/ic_new_file"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/btnOpen"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Open File"
            android:src="@drawable/ic_open_file"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Save File"
            android:src="@drawable/ic_save_file"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/btnCompile"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Compile Code"
            android:src="@drawable/ic_play_arrow"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />


    </LinearLayout>


    <!-- Word Count Text -->

    <!-- Text Editor Area -->

    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text="Untitled.txt"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wordCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Words: 0  Characters: 0"
        android:textColor="@android:color/white" />

    <!-- Output Slider (Hidden by default) -->

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_edit_text"
        android:gravity="start|top"
        android:hint="Enter text here..."
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="14sp"
        android:fontFamily="monospace" />

    <LinearLayout
        android:id="@+id/outputSlider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edit_text"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Output:"
            android:textColor="#888888"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Click compile to see output..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:gravity="start|top"
            android:scrollbars="vertical" />

    </LinearLayout>

</LinearLayout>